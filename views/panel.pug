    title Panel
  body
    script.
      function redirectToDoctors() {
      var idLekarza = location.search.split('idLekarza=')[1];
      var url= '/listofdoctors?idLekarza=' + idLekarza;
      window.location.replace(url);
      }
      function redirectToPatients() {
      var idLekarza = location.search.split('idLekarza=')[1];
      var url= '/listofpatients?idLekarza=' + idLekarza;
      window.location.replace(url);
      }
      function redirectToAppointments() {
