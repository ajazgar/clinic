doctype html
html(lang='pl')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale-1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    title Referrals
  body
    script.
      function redirectToPanel() {
      var idLekarza = location.search.split('idLekarza=')[1];
      var url= '/panel?idLekarza=' + idLekarza;
      window.location.replace(url);
      }
      
    header
      main
        .content-buttons
          a.button(href='/' style="background-color: #6A2E2E;") Wyloguj się
          a.button(onclick='redirectToPanel()', style="background-color: #6A2E2E;") Wróć
        #search
          form#searchfield(action='listofusers')
            input(type='text', name='userToSearch', required='required', style='display: inline-block;')
            input(type='submit', value='Search', style='display: inline-block;')
          h3#usersheader Referrals
          br
        ol#listofusers
          each val in values
            li  #{val.idSkierowania}, #{val.idPacjenta}, #{val.idLekarza}, #{val.idWizyty}
            a.button#userbutton(href='/delete?login=admin&userToDelete=' + val.login) Usuń  